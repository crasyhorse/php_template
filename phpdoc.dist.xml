<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="data/xsd/phpdoc.xsd"
>
    <title>CrasyHorse / PHP-Unit 2 Xray</title>
    <parser>
        <target>build</target>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <transformations>
        <template name="vendor/fr3nch13/phpdoc-markdown/data/templates/markdown"/>
    </transformations>    
    <paths>
        <output>docs/api</output>
        <cache>docs/cache</cache>
    </paths>
    <version number="0.1.0">
        <folder>0.1.0</folder>
        <api format="php">
            <source dsn=".">
                <path>src/**/*.php</path>
            </source>
            <ignore hidden="true" symlinks="true"></ignore>
        </api>
    </version>
</phpdocumentor>
